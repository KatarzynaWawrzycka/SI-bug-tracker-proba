{% extends 'base.html.twig' %}

{% block title %}{{ 'title.user_list'|trans }}{% endblock %}

{% block body %}
    <h2>{{ 'title.user_list'|trans }}</h2>

    <ul class="list-group">
        {% for user in pagination.items %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ user.email }}
                <a href="{{ path('user_show', {id: user.id}) }}" class="btn btn-sm btn-outline-primary">
                    {{ 'action.manage'|trans }}
                </a>
            </li>
        {% else %}
            <li class="list-group-item">{{ 'message.no_users_found'|trans }}</li>
        {% endfor %}
    </ul>

    <div class="navigation text-center mt-3">
        {{ knp_pagination_render(pagination) }}
    </div>

    <a href="{{ path('bug_index') }}" class="btn btn-secondary mt-3">{{ 'action.back'|trans }}</a>
{% endblock %}
