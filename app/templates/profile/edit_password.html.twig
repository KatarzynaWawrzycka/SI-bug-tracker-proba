{% extends 'base.html.twig' %}

{% block title %}{{ 'title.edit_password'|trans }}{% endblock %}

{% block body %}
    <h2>{{ 'title.edit_password'|trans }}</h2>

    {{ form_start(form) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.confirmPassword) }}
    <button type="submit" class="btn btn-primary">
        {{ 'action.save'|trans }}
    </button>
    {{ form_end(form) }}

    <a href="{{ path('profile') }}">{{ 'action.back'|trans }}</a>
{% endblock %}
